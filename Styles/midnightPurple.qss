/*
border :                #bbb
background :            #111525
pressed bg :            #333
color :                 #fff
hover border :          #713a7a
disabled background :   #444
disabled color :        #bbb
*/

/*General*/
QWidget {
    background-color: #111525;
    color: #fff;
    alternate-background-color: #1c273d;
}

QWidget:disabled {
    background-color: #323a44;
    color: #bbb;
    border: 1px solid #666;
}

QWidget:pressed {
    background-color: #21294b;
}

/*Menu bar*/
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0.25 #370048, stop: 0.5 #161249, stop: 1 #00364a);;
    color: #fff;
    border-bottom: none;
}

QMenuBar::item:selected {
    border-bottom: 2px solid #713a7a;
}

QMenuBar::item:!selected {
        border-bottom: 2px solid transparent;
        padding-top: 3px;
        padding-bottom: 3px;
        padding-left: 6px;
        padding-right: 6px;
}

QMenuBar::item:pressed {
        color: #fff ;
        background: #5a2e61;
        border-bottom: 2px solid #713a7a;
}

QMenu::item {
        background-color: #111525;
        padding-left: 1.5em;
        padding-right: 0.75em;
        padding-top: 0.25em;
        padding-bottom: 0.25em;
        margin-bottom: 0.125em;
        border-left: 2px solid #713a7a;
}

QMenu::item:selected {
        color: #fff ;
        border-left: 2px solid #65346d;
}

QScrollBar {
        width: 10px;
}

QTableWidget QScrollBar {
        width: 10px;
        height: 3px;
}

QScrollBar::handle {
        background: #666;
        min-height: 30px;
}

QScrollBar::handle:hover, QScrollBar::handle:pressed {
        background: #713a7a;
}

QScrollBar::up-arrow, QScrollBar::down-arrow, QScrollBar::up-button:vertical, QScrollBar::down-button, QScrollBar::sub-line, QScrollBar::add-line, QScrollBar::add-page, QScrollBar::sub-page {
        color: transparent;
        background: transparent;
        border: none;
}

/* Checkboxes */
QCheckBox::indicator {
        border: 1px solid #455971;
        border-radius: 2px;
        width: 0.75em;
        height: 0.75em;
        margin-top: 1px;
}

QCheckBox::indicator:checked {
        background-color: qradialgradient(cx:0, cy:0, radius: 1, fx:0.3, fy:0.3, stop:0.8 #a900e7, stop:1 #8700b8);   ;
}

QCheckBox::indicator:checked:hover {
        background-color: qradialgradient(cx:0, cy:0, radius: 1, fx:0.3, fy:0.3, stop:0.8 #ba32eb, stop:1 #9f32c6);
}

QCheckBox::indicator:unchecked {
        background-color: #fff;
}

QCheckBox::indicator:unchecked:hover {
        border: 1px solid #a900e7;
}

/* Combo Boxes */
QComboBox {
        background-color: #111525;
        color: #fff;
        border: 0.0625em solid #bbb;
        border-radius: 0.10em;
        padding-bottom: 0.125em;
        padding-left: 0.25em;
        min-height: 14px;
}

QComboBox:hover {
        color: #fff;
        background-color: #111525;
        border: 0.0625em solid #713a7a;
        border-radius: 0.10em;
        padding-bottom: 0.125em;
        padding-left: 0.25em;
}

QComboBox::indicator{
        background-color: transparent;
        selection-background-color: transparent;
        color: transparent;
        selection-color: transparent;
}

QComboBox::selected {
        background-color: #111525;
        color: #fff;
        border: 0.0625em solid #bbb;
        border-radius: 0.10em;
        padding-bottom: 0.125em;
}

QComboBox QAbstractItemView::item {
    border: 1px solid transparent;
    background-color:#222;
}

QComboBox QAbstractItemView::item:hover {
    border: 1px solid #713a7a;
    background-color:#333;
}

QListWidget::item{
    border: 1px solid transparent;
}

QListWidget::item:hover{
    border: 1px solid #713a7a;
}

/* Buttons */
QPushButton {
        border: 1px solid #455971;
        padding: 2px;
        color: #fff;
        border-radius: 2px;
        background-color: #111525;
        min-width: 82px;
}

QPushButton:hover {
        border: 1px solid #713a7a;
}

/* Spinboxes */
QSpinBox, QDoubleSpinBox {
        border: 1px solid #455971;
        padding: 2px;
        color: #fff;
        border-radius: 2px;
        background-color: #111525;
}

QSpinBox:hover, QDoubleSpinBox:hover {
        border: 1px solid #713a7a;
}

QSpinBox:disabled, QDoubleSpinBox:disabled {
        border: 1px solid #455971;
}

QTableWidget {
    selection-background-color: #713a7a;
    selection-color:#fff;
}

QHeaderView {
    background-color: #29344c;
    border-bottom:1px solid #555;
    font-weight:bold;
}

QHeaderView::section {
    background-color: transparent;
}

QLineEdit {
    background-color: #111525;
    padding: 2px;
    color: #fff;
    border-radius: 2px;
    border: 1px solid #455971;
}

QLineEdit:hover {
    border: 1px solid #713a7a;
}

QDateEdit {
    background-color: #111525;
    padding: 2px;
    color: #fff;
    border-radius: 2px;
    border: 1px solid #455971;
}

QDateEdit:hover {
    border: 1px solid #713a7a;
}
